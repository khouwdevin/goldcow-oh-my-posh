{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#c79302",
          "foreground": "#fff",
          "properties": {
            "windows": "\uf179"
          },
          "leading_diamond": "\u256d\u2500\ue0b6",
          "style": "diamond",
          "template": "üêÆ",
          "type": "os"
        },
        {
          "background": "#c79302",
          "foreground": "#fff",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": "{{.UserName }} ",
          "type": "session"
        },
        {
          "background": "#2489e1",
          "foreground": "#fff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "style": "powerline",
          "template": " \ue5ff {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#22b4a8", 
          "foreground": "#fff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true
          },
          "style": "powerline",
          "template": " {{ .HEAD }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }}",
          "type": "git"
        },
        {
          "background": "#22b4a8",
          "foreground": "#fff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "always_enabled": true
          },
          "style": "powerline",
          "template": " ·õã ",
          "type": "exit"
        },
        {
          "background": "#003543",
          "foreground": "#fff",
          "properties": {
            "time_format":"3:04PM Mon, 2 Jan 06"
          },
          "powerline_symbol": "\ue0b0",
            "style": "powerline",
            "template": " {{ .CurrentDate | date .Format }} ",
            "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#FFD700",
          "style": "plain",
          "template": "\u2570\u2500",
          "type": "text"
        },
        {
          "foreground": "#c79302",
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "\u276f\u276f",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{ .UserName }} {{ .Shell }}",
  "final_space": true,
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#c79302",
    "template": "‚Üí "
  },
  "version": 2
}
